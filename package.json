    "@types/connect-mongodb-session": "0.0.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/dateformat": "^1.0.1",
    "@types/express": "^4.16.0",
    "@types/express-handlebars": "0.0.30",
    "@types/express-session": "^1.15.11",
    "@types/fs-extra": "^5.0.4",
    "@types/helmet": "0.0.42",
    "@types/moment": "^2.13.0",
    "@types/mongodb": "^3.1.14",
    "@types/morgan": "^1.7.35",
    "@types/passport": "^0.4.7",
    "@types/passport-auth0": "^1.0.2",
    "@types/semver": "^5.5.0",
    "@types/showdown": "^1.7.5",
    "axios": "^0.19.0-beta.1",
    "connect-flash": "^0.1.1",
    "connect-mongodb-session": "^2.0.5",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "dateformat": "^3.0.3",
    "debug": "^4.1.0",
    "express": "^4.16.0",
    "express-handlebars": "^3.0.0",
    "express-http-to-https": "^1.1.4",
    "express-session": "^1.15.6",
    "fs-extra": "^7.0.1",
    "helmet": "^3.15.0",
    "http-errors": "^1.7.1",
    "moment": "^2.22.2",
    "mongodb": "^3.1.10",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-auth0": "^1.1.0",
    "remote-git-tags": "^2.0.0",
    "semver": "^5.6.0",
    "showdown": "^1.9.0",
    "source-map-support": "^0.5.9"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/power-assert": "^1.5.0",
    "espower-typescript": "^9.0.0",
    "mocha": "^5.2.0",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "power-assert": "^1.6.1",
    "rimraf": "^2.6.2",
    "supervisor": "^0.12.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "autotest": "supervisor --watch index.ts,lib,test --extensions ts --no-restart-on exit --quiet --exec npm -- test",
    "build": "run-s compile lint",
    "clean": "run-p clean:compile clean:test clean:css clean:run",
    "clean:compile": "rimraf git-info.json \"index.{d.ts,js{,.map}}\" \"{lib,test}/**/*.{d.ts,js{,.map}}\" lib/typings/types.ts",
    "clean:dist": "run-s clean clean:npm",
    "clean:npm": "rimraf node_modules",
    "clean:run": "rimraf *-v8.log profile.txt log",
    "clean:css": "rimraf app/public/css/main.css",
    "clean:test": "rimraf .nyc_output coverage",
    "compile": "run-s compile:sass compile:ts",
    "compile:sass": "node-sass app/sass/main.scss --output app/public/css --output-style compressed",
    "compile:ts": "tsc --project .",
    "lint": "tslint --config tslint.json --format verbose --project .",
    "lint:fix": "npm run lint -- --fix",
    "heroku-postbuild": "npm run build",
    "start": "node app/index.js",
    "watch:sass": "node-sass --watch app/sass/main.scss -o app/public/css"
  },
  "engines": {
    "node": ">=8.1.0",
    "npm": ">=5.0.0"
  }
}
